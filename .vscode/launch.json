{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/build/bin/linebaby",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [
				{
					"name": "LIBGL_DEBUG",
					"value": "verbose"
				},
				{
					"name": "MESA_DEBUG",
					"value": "1"
				},
				{
					"name": "EGL_LOG_LEVEL",
					"value": "debug"
				}
			],
			"externalConsole": false,
			"linux": {
				"MIMode": "gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					}
				]
			}
		}
	]
}